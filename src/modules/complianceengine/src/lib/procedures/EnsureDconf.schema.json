{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "EnsureDconf"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureDconf": {
              "type": "object",
              "required": [
                "key",
                "value",
                "operation"
              ],
              "additionalProperties": false,
              "properties": {
                "key": {
                  "type": "string",
                  "description": "dconf key name to be checked"
                },
                "value": {
                  "type": "string",
                  "description": "Value to be verified using the operation"
                },
                "operation": {
                  "type": "string",
                  "description": "Type of operation, one of eq, ne",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((eq|ne))$|(^(eq|ne)$))"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": []
    }
  }
}
