          ],
          "additionalProperties": false,
          "properties": {
            "SCE": {
              "type": "object",
              "required": [
                "scriptName"
              ],
              "additionalProperties": false,
              "properties": {
                "scriptName": {
                  "type": "string",
                  "description": "Script path"
                },
                "ENVIRONMENT": {
                  "type": "string",
                  "description": "Environment as passed to the SCE script"
                }
              }
            }
          }
        }
      ]
    }
  }
