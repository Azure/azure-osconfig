{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "EnsurePasswordChangeIsInPast"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsurePasswordChangeIsInPast": {
              "type": "object",
              "required": [],
              "additionalProperties": false,
              "properties": {
                "test_etcShadowPath": {
                  "type": "string",
                  "description": "Path to the /etc/shadow file to test against",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:(.*/etc/shadow.*)$|(/etc/shadow))"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": []
    }
  }
}
