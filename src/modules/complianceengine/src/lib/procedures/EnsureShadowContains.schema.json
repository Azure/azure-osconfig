{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "EnsureShadowContains"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureShadowContains": {
              "type": "object",
              "required": [
                "field",
                "value",
                "operation"
              ],
              "additionalProperties": false,
              "properties": {
                "username": {
                  "type": "string",
                  "description": "A pattern or value to match usernames against"
                },
                "username_operation": {
                  "type": "string",
                  "description": "A comparison operation for the username parameter",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((eq|ne|lt|le|gt|ge|match))$|(^(eq|ne|lt|le|gt|ge|match)$))"
                },
                "field": {
                  "type": "string",
                  "description": "The /etc/shadow entry field to match against",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((password|last_change|min_age|max_age|warn_period|inactivity_period|expiration_date|encryption_method))$|(^(password|last_change|min_age|max_age|warn_period|inactivity_period|expiration_date|encryption_method)$))"
                },
                "value": {
                  "type": "string",
                  "description": "A pattern or value to match against the specified field"
                },
                "operation": {
                  "type": "string",
                  "description": "A comparison operation for the value parameter",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((eq|ne|lt|le|gt|ge|match))$|(^(eq|ne|lt|le|gt|ge|match)$))"
                },
                "test_etcShadowPath": {
                  "type": "string",
                  "description": "Path to the /etc/shadow file to test against"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": []
    }
  }
}
