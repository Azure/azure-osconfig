{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "EnsureKernelModuleUnavailable"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureKernelModuleUnavailable": {
              "type": "object",
              "required": [
                "moduleName"
              ],
              "additionalProperties": false,
              "properties": {
                "moduleName": {
                  "type": "string",
                  "description": "Name of the kernel module"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": []
    }
  }
}
