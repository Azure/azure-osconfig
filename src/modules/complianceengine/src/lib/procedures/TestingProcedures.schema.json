{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "AuditFailure"
          ],
          "additionalProperties": false,
          "properties": {
            "AuditFailure": {
              "type": "object",
              "required": [],
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string",
                  "description": "The message to be logged"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "AuditGetParamValues"
          ],
          "additionalProperties": false,
          "properties": {
            "AuditGetParamValues": {
              "type": "object",
              "required": [],
              "additionalProperties": false,
              "properties": {
                "KEY1": {
                  "type": "string"
                },
                "KEY2": {
                  "type": "string"
                },
                "KEY3": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "AuditSuccess"
          ],
          "additionalProperties": false,
          "properties": {
            "AuditSuccess": {
              "type": "object",
              "required": [],
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string",
                  "description": "The message to be logged"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "RemediationFailure"
          ],
          "additionalProperties": false,
          "properties": {
            "RemediationFailure": {
              "type": "object",
              "required": [],
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string",
                  "description": "The message to be logged"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "RemediationParametrized"
          ],
          "additionalProperties": false,
          "properties": {
            "RemediationParametrized": {
              "type": "object",
              "required": [
                "result"
              ],
              "additionalProperties": false,
              "properties": {
                "result": {
                  "type": "string",
                  "description": "Expected remediation result - success or failure",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:(.*(success|failure).*)$|((success|failure)))"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "RemediationSuccess"
          ],
          "additionalProperties": false,
          "properties": {
            "RemediationSuccess": {
              "type": "object",
              "required": [],
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string",
                  "description": "The message to be logged"
                }
              }
            }
          }
        }
      ]
    }
  }
}
