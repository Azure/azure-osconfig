{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "EnsureSshdOption"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureSshdOption": {
              "type": "object",
              "required": [
                "option",
                "value"
              ],
              "additionalProperties": false,
              "properties": {
                "option": {
                  "type": "string",
                  "description": "Name of the SSH daemon option"
                },
                "value": {
                  "type": "string",
                  "description": "Regex, string or integer threshold the option value is evaluated against"
                },
                "op": {
                  "type": "string",
                  "description": "Operation (match|not_match|lt|le|gt|ge) optional, defaults to match",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((match|not_match|lt|le|gt|ge))$|(^(match|not_match|lt|le|gt|ge)$))"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "EnsureSshdOptionMatch"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureSshdOptionMatch": {
              "type": "object",
              "required": [
                "option",
                "value"
              ],
              "additionalProperties": false,
              "properties": {
                "option": {
                  "type": "string",
                  "description": "Name of the SSH daemon option"
                },
                "value": {
                  "type": "string",
                  "description": "Regex, string or integer threshold the option value is evaluated against"
                },
                "op": {
                  "type": "string",
                  "description": "Operation (match|not_match|lt|le|gt|ge) optional, defaults to match",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((match|not_match|lt|le|gt|ge))$|(^(match|not_match|lt|le|gt|ge)$))"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "EnsureSshdNoOption"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureSshdNoOption": {
              "type": "object",
              "required": [
                "options",
                "values"
              ],
              "additionalProperties": false,
              "properties": {
                "options": {
                  "type": "string",
                  "description": "Name of the SSH daemon options, comma separated"
                },
                "values": {
                  "type": "string",
                  "description": "Comma separated list of regexes"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": []
    }
  }
}
