{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "audit": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "EnsureSshdOption"
          ],
          "additionalProperties": false,
          "properties": {
            "EnsureSshdOption": {
              "type": "object",
              "required": [
                "option",
                "value"
              ],
              "additionalProperties": false,
              "properties": {
                "option": {
                  "type": "string",
                  "description": "Name of the SSH daemon option, might be a comma-separated list"
                },
                "value": {
                  "type": "string",
                  "description": "Regex, list of regexes, string or integer threshold the option value is evaluated against"
                },
                "op": {
                  "type": "string",
                  "description": "Operation (regex|match|not_match|lt|le|gt|ge) optional, defaults to regex",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((regex|match|not_match|lt|le|gt|ge))$|(^(regex|match|not_match|lt|le|gt|ge)$))"
                },
                "mode": {
                  "type": "string",
                  "description": "Mode, one of (regular|all_matches)",
                  "pattern": "(^\\$[a-zA-Z0-9_]+:((regular|all_matches))$|(^(regular|all_matches)$))"
                }
              }
            }
          }
        }
      ]
    },
    "remediation": {
      "anyOf": []
    }
  }
}
