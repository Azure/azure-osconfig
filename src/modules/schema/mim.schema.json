{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Module Interface Model (MIM) JSON schema",
  "$defs": {
    "mimComponent": {
      "$id": "#/$defs/mimComponent",
      "type": "object",
      "description": "A MIM component",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "mimComponent"
          ]
        },
        "contents": {
          "type": "array",
          "description": "The list of MIM objects for a MIM component",
          "items": {
            "$ref": "#/$defs/mimObject"
          }
        }
      }
    },
    "mimObject": {
      "$id": "#/$defs/mimObject",
      "type": "object",
      "description": "A MIM object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "mimObject"
          ]
        },
        "desired": {
          "description": "The MIM object type (desired or reported)",
          "type": "boolean",
          "default": false
        },
        "schema": {
          "description": "MIM settings",
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "string",
                "integer",
                "boolean"
              ]
            },
            {
              "$ref": "#/$defs/enumSchema"
            },
            {
              "$ref": "#/$defs/objectSchema"
            },
            {
              "$ref": "#/$defs/mapSchema"
            },
            {
              "type": "object",
              "description": "Same MIM settings repeated a variable number of times",
              "required": [
                "type",
                "elementSchema"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "array"
                  ]
                },
                "elementSchma": {
                  "$ref": "#/$defs/objectSchema"
                }
              }
            }
          ]
        }
      }
    },
    "enumSchema": {
      "$id": "#/$defs/enumSchema",
      "type": "object",
      "description": "A schema describing an enumeration of integers",
      "required": [
        "type",
        "valueSchema",
        "enumValues"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "enum"
          ]
        },
        "valueSchema": {
          "type": "string",
          "enum": [
            "integer"
          ]
        },
        "enumValues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "enumValue": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "objectSchema": {
      "$id": "#/$defs/objectSchema",
      "type": "object",
      "title": "MIM object schema",
      "description": "A schema describing the JSON object schema of a MIM object",
      "required": [
        "fields"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "object"
          ],
          "default": "object"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "The list of MIM settings for the MIM object",
            "required": [
              "name",
              "schema"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "MIM setting name"
              },
              "schema": {
                "description": "MIM setting schema",
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "string",
                      "integer",
                      "boolean"
                    ]
                  },
                  {
                    "$ref": "#/$defs/enumSchema"
                  },
                  {
                    "$ref": "#/$defs/arraySchema"
                  },
                  {
                    "$ref": "#/$defs/mapSchema"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "arraySchema": {
      "$id": "#/$defs/arraySchema",
      "type": "object",
      "description": "A schema describing an array setting",
      "required": [
        "type",
        "elementSchema"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "array"
          ]
        },
        "elementSchema": {
          "type": "string",
          "enum": [
            "string",
            "integer"
          ]
        }
      }
    },
    "mapSchema": {
      "$id": "#/$defs/mapSchema",
      "type": "object",
      "description": "A schema describing a map setting",
      "required": [
        "type",
        "mapKey",
        "mapValue"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "map"
          ]
        },
        "mapKey": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "schema": {
              "type": "string",
              "enum": [
                "string"
              ]
            }
          }
        },
        "mapValue": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "schema": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": [
                    "string",
                    "integer"
                  ]
                },
                {
                  "$ref": "#/$defs/objectSchema"
                }
              ]
            }
          }
        }
      }
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "MIM name"
    },
    "type": {
      "type": "string",
      "enum": [
        "mimModel"
      ]
    },
    "contents": {
      "type": "array",
      "description": "List of MIM components in the model",
      "items": {
        "$ref": "#/$defs/mimComponent"
      }
    }
  },
  "required": [
    "name",
    "type",
    "contents"
  ]
}